<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher.GenerateCodeActivity">

    <Button
        android:id="@+id/test_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generate_btn" />

    <!--<Button-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/generate_btn"
        android:layout_width="162dp"
        android:layout_height="91dp"
        android:background="@drawable/gradient_button"
        android:fontFamily="@font/julius_sans_one"
        android:text="@string/generate_btn"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/pressGenerate"
        android:layout_width="399dp"
        android:layout_height="162dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/headland_one"
        android:gravity="center"
        android:text="@string/pressGenerate"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/teacherNavView"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/gradient"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generate_btn"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/teacher_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>